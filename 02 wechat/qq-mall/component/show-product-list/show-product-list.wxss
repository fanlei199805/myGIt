.productBox {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.list {
  width: 50%;
  height: 413rpx;
  box-sizing: border-box;
  border: 1rpx #e7e7e7 solid;
  display: flex;
  flex-direction: column;
}

.listIcon {
  width: 100%;
  height: 254rpx;
}

.listName {
  width: 84%;
  height: 68rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.listPrize {
  width: 100%;
  padding-left: 30rpx;
  font-size: 36rpx;
  color: #FA0201;
  margin-top: 13rpx;
}