page{
  background: #f6f6f6;
}

.add-form{
  background: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-item{
  width: 92%;
  height: 93rpx;
  line-height: 93rpx;
  border-bottom: 1px solid #ebebeb;
  display: flex;
}

.fieldName {
  font-size: 30rpx;
  color: #333;
}

.input{
  flex: 1;
  margin-left: 21rpx;
  height: 93rpx;
  font-size: 28rpx;
  color: #333;
}

.form-default{
  width: 92%;
  height: 93rpx;
  line-height: 93rpx;
}

.default-input{
  margin-top: 30rpx;
  display: block;
  height: 32rpx;
  padding-left: 49rpx;
  line-height: 32rpx;
  background: url(http://sms.houhan.com/duanyu_icon/checkIcon.png) no-repeat;
  background-size: 32rpx;
  font-size: 30rpx;
  color: #999;
  float: left;
}

.default-input.selected{
  background: url(http://sms.houhan.com/duanyu_icon/checkedIcon.png) no-repeat;
  background-size: 32rpx;
}

.btns{
    position: fixed;
    bottom: 0;
    left: 0;
    overflow: hidden;
    display: flex;
    height: 100rpx;
    width: 100%;
}

.cannel, .save{
  flex: 1;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #fff;
  border: none;
  border-radius: 0;
}

.add-address .cannel{
  background: #333;
}

.add-address .save{
  background: #FF5B34;
}

.region-select{
  width: 100%;
  height: 600rpx;
  background: #fff;
  position: fixed;
  z-index: 10;
  left:0;
  bottom: 0;
}

.region-select .hd{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f6f6f6;
}

.region-select .region-selected{
  float: left;
  display: flex;
}

.region-select .region-selected .item{
  max-width: 140rpx;
  margin-left: 30rpx;
  text-align: left;
  color: #333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.region-select .region-selected .item.disabled{
  color: #999;
}

.region-select .region-selected .item.selected{
  color: #b4282d;
}

.region-select .done{
  float: right;
  margin-right: 30rpx;
  color: #333;
  font-size: 28rpx;
}

.region-select .done.disabled{
  color: #999;
}

.region-select .bd{
  height: 500rpx;
  width: 100%;
  padding: 0 30rpx;
}

.region-select .region-list{
  height: auto;
  overflow: scroll;
}

.region-select .region-list .item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
  color: #333;
  font-size: 28rpx;
}

.region-select .region-list .item.selected{
  color: #b4282d;
}

.bg-mask {
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 8;
}