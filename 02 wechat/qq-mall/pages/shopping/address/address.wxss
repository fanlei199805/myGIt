page{
  background: #f6f6f6;
}

.address-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 99rpx;
}

.address-list .item{
  width: 100%;
  height: 210rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  background: #fff;
}

.itemTop {
  width: 100%;
  height: 120rpx;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx #E7E7E7 solid;
}

.name {
  width: 100%;
  text-align: left;
  font-size: 28rpx;
  color: #333;
  margin-top: 27rpx;
}

.address {
  width: 100%;
  text-align: left;
  font-size: 26rpx;
  color: #666;
}

.itemBot {
  width: 100%;
  height: 90rpx;
  position: relative;
}

.checkbox{
  height: 32rpx;
  padding-left: 45rpx;
  padding-top: 2rpx;
  line-height: 32rpx;
  background: url(http://sms.houhan.com/duanyu_icon/checkIcon.png) no-repeat;
  background-size: 32rpx;
  font-size: 26rpx;
  color: #999;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
}

.checkbox.checked{
  background: url(http://sms.houhan.com/duanyu_icon/checkedIcon.png) no-repeat;
  background-size: 32rpx;
}

.edit{
  height: 25rpx;
  padding-left: 34rpx;
  padding-top: 1rpx;
  line-height: 25rpx;
  background: url(http://sms.houhan.com/duanyu_icon/edit1.png) no-repeat;
  background-size: 25rpx;
  font-size: 26rpx;
  color: #999;
  position: absolute;
  top: 34rpx;
  right: 158rpx;
}

.del{
  height: 25rpx;
  padding-left: 34rpx;
  padding-top: 1rpx;
  line-height: 25rpx;
  background: url(http://sms.houhan.com/duanyu_icon/delete.png) no-repeat;
  background-size: 25rpx;
  font-size: 26rpx;
  color: #999;
  position: absolute;
  top: 34rpx;
  right: 29rpx;
}

.add-address{
  background: #FF5B34;
  text-align: center;
  width: 100%;
  height: 99rpx;
  line-height: 99rpx;
  position: fixed;
  border-radius: 0;
  border: none;
  color: #fff;
  font-size: 32rpx;
  bottom: 0;
  left:0;
}

.empty-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .icon{
  height: 248rpx;
  width: 258rpx;
  margin-bottom: 10rpx;
}

.empty-view .text{
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}