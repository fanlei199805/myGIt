page {
  background: #f8f8f8;
}

picker {
  width: 100%;
  height: 120rpx;
}

.fb-type {
  width: 92%;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-top: 10rpx;
}

.fb-type .type-label {
  flex: 1;
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
}

.fb-type .type-icon {
  height: 17rpx;
  width: 30rpx;
}

.questionText {
  width: 96%;
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 11rpx;
  padding-left: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #4a4a4a;
}

.fb-body {
  width: 100%;
  height: 450rpx;
  position: relative;
}

.fb-body .content {
  width: 92%;
  height: 390rpx;
  color: #000;
  font-size: 28rpx;
  padding: 30rpx;
  background: #fff;
}

.fb-body .text-count {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #666;
  z-index: 50;
}

.fb-mobile {
  width: 96%;
  height: 120rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.fb-mobile .mobile{
  height: 40rpx;
  width: 100%;
  color: #000;
  line-height: 40rpx;
  font-size: 28rpx;
}

.fb-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #FF623D;
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}